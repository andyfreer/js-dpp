{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "$id": {
      "type": "string",
      "minLength": 42,
      "maxLength": 44,
      "pattern": "^[123456789ABCDEFGHJKLMNPQRSTUVWXYZabcdefghijkmnopqrstuvwxyz]+$"
    },
    "$type": {
      "type": "string"
    },
    "$action": {
      "type": "number",
      "enum": [0, 1, 3]
    },
    "$version": {
      "type": "string",
      "minLength": 5,
      "pattern": "^\\d+(\\.\\d+){0,2}$"
    }
  },
  "required": [
    "$id",
    "$type",
    "$action",
    "$version"
  ],
  "additionalProperties": false
}
